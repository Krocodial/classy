{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-dc"
  },
  "labels": {
	"template": "nginx-dc",
	"app": "classy"
  },
    "parameters": [
	{
	  "name": "APP_NAME",
	  "required": true,
	  "value": "classy"
	},
	{
	  "name": "ENV_NAME",
	  "required": false,
	  "value": ""
	},
	{
		"name": "ENV_TAG",
		"required": true,
		"value": "dev"
	},
	{
	  "name": "APP_IMAGE_TAG",
	  "required": true,
	  "value": "NS"
	},
    {
      "name": "NAME",
      "required": true,
      "value": "proxy-nginx"
    },
    {
      "name": "APPLICATION_DOMAIN",
	  "required": true,
	  "value": "empty"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${ENV_NAME}",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        },
		"labels": {
			"app": "${NAME}${ENV_NAME}"
		}
      },
      "spec": {
        "ports": [
          {
            "name": "1337-tcp",
			"protocol": "TCP",
            "port": 1337,
            "targetPort": 1337
          }
        ],
        "selector": {
          "app": "${NAME}${ENV_NAME}"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${ENV_NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "kind": "Service",
          "name": "${NAME}${ENV_NAME}"
        },
		"port": {
		  "targetPort": "1337-tcp"
		},
		"tls": {
			"termination": "edge",
			"insecureEdgeTerminationPolicy": "Redirect"
		}
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${ENV_NAME}",
        "annotations": {
          "description": "Defines how to deploy the application server",
          "template.alpha.openshift.io/wait-for-ready": "true"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
		},
        "triggers": [
		  {
		    "type": "ImageChange",
			"imageChangeParams": {
			  "automatic": true,
			  "containerNames": [
			    "${NAME}${ENV_NAME}"
			  ],
			  "from": {
			    "kind": "ImageStreamTag",
				"name": "${NAME}:${ENV_TAG}"
			  }
			}
		  },
		  {
			"type": "ConfigChange"
		  }
        ],
        "replicas": 3,
        "selector": {
          "name": "${NAME}${ENV_NAME}",
		  "app": "${NAME}${ENV_NAME}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}${ENV_NAME}",
            "labels": {
              "name": "${NAME}${ENV_NAME}",
			  "app": "${NAME}${ENV_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}${ENV_NAME}",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 1337,
					"protocol": "TCP"
                  }
                ],
                "volumeMounts": {
                    "mountPath": ""
                },

				"readinessProbe": {
                  "timeoutSeconds": 3,
                  "initialDelaySeconds": 3,
                  "httpGet": {
                    "path": "/nginx_status/",
                    "port": 1337
                  }
                },
                "livenessProbe": {
                    "timeoutSeconds": 3,
                    "initialDelaySeconds": 30,
                    "httpGet": {
                        "path": "/nginx_status/",
                        "port": 1337
                    }
                },
                "env": [
                ],
                "resources": {
                  "limits": {
                    "memory": "2Gi",
                    "cpu": "500m"
                  }
                }
              }
            ],
            "volumes": [

            ]
          }
        }
      }
    }
  ]
}
