{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "postgres-bc"
  },
  "labels": {
	"template": "postgres-bc",
	"app": "classy-postgresql"
  },
    "parameters": [
		{
		  "name": "ENV_NAME",
		  "required": true
		}
	],
	"objects": [
		{
		  "kind": "PersistentVolumeClaim",
		  "apiVersion": "v1",
		  "metadata": {
			"name": "postgresql"
		  },
		  "spec": {
			"accessModes": [
			  "ReadWriteOnce"
			],
			"resources": {
			  "requests": {
				"storage": "5Gi"
			  }
			}
		  }
	}
	]
}
