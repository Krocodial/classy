{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "postgres-bc"
  },
  "labels": {
	"template": "postgres-bc",
	"app": "classy"
  },
    "parameters": [
		{
		  "name": "ENV_NAME",
		  "required": true
		}
	],
	"objects": [
	    {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "classy-postgresql",
                "creationTimestamp": null,
                "labels": {
                    "base-name": "classy-postgresql",
                    "appver": "classy"
                },
                "annotations": {}
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags":[
                    {
                        "annotations": null,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "postgresql:9.5"
                        },
                        "importPolicy": {},
                        "name": "${ENV_NAME}",
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            }
        }
	
	]
}
