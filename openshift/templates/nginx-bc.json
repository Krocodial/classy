{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-bc"
  },
  "labels": {
    "template": "nginx-bc",
    "app": "classy"
  },
    "parameters": [
        {
          "name": "APP_NAME",
          "required": true,
          "value": "classy"
        },
        {
          "name": "APP_IMAGE_TAG",
          "required": true,
          "value": "NS"
        },
        {
          "name": "SOURCE_REPOSITORY_URL",
          "required": true,
          "value": "https://github.com/krocodial/classy.git"
        },  
        {
          "name": "SOURCE_REPOSITORY_REF",
          "required": true,
          "value": "master"
        },
        {
          "name": "NAME",
          "required": true,
          "value": "proxy-nginx"
        },
        {
          "name": "IMG_SRC",
          "required": true,
          "value": "classy"
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "build": "${NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-${APP_IMAGE_TAG}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}-${APP_IMAGE_TAG}"
                }
            },
            "spec": {
                "triggers": [
                ],
                "runPolicy": "Serial",
                "source": {
                    "git": {
                       "uri": "${SOURCE_REPOSITORY_URL}",
                       "ref": "${SOURCE_REPOSITORY_REF}" 
                    },
                    "contextDir": "conf"
                },
                "strategy": {
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "nginx:latest"
                        },
                        "from": {
                                "kind": "ImageStreamTag",
                                "name": "classy:latest",
                                "namespace": "l9fjgg-tools"
                        },
                        "dockerfilePath": "",
                        "noCache": true,
                        "forcePull": true
                    },
                    "env": [
                    ]
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:${APP_IMAGE_TAG}"
                    }
                },
                "resources": {},
                "postCommit": {
                    
                },
                "nodeSelector": null
            }
        }
    ]
}
