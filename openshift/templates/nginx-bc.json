{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-bc"
  },
  "labels": {
	"template": "nginx-bc",
	"app": "classy"
  },
    "parameters": [
		{
		  "name": "APP_NAME",
		  "required": true,
		  "value": "classy"
		},
		{
		  "name": "APP_IMAGE_TAG",
		  "required": true,
		  "value": "NS"
		},
		{
		  "name": "SOURCE_REPOSITORY_URL",
		  "required": true,
		  "value": "https://github.com/krocodial/classy.git"
		},	
		{
		  "name": "SOURCE_REPOSITORY_REF",
		  "required": true,
		  "value": "master"
		},
		{
		  "name": "NAME",
		  "required": true,
		  "value": "proxy-nginx"
		},
		{
		  "name": "IMG_SRC",
		  "required": true,
		  "value": "classy"
		}
		
	],
	"objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "build": "${NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-${APP_IMAGE_TAG}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}-${APP_IMAGE_TAG}"
                }
            },
            "spec": {
                "triggers": [
                ],
				"runPolicy": "Serial",
                "source": {
                    "dockerfile": "FROM ${IMG_SRC}:${APP_IMAGE_TAG} as builder\nFROM nginx\nWORKDIR /usr/share/nginx\nRUN rm -rf /usr/share/nginx/html/*\nCOPY --from=builder /opt/app-root/src/conf/html /usr/share/nginx/html\nWORKDIR /etc/nginx/conf.d/\nCOPY --from=builder /opt/app-root/src/conf/conf.d/classy.conf.tmpl /tmp/\nCMD /bin/bash -c 'envsubst < /tmp/classy.conf.tmpl > /etc/nginx/conf.d/default.conf && exec nginx -g \"daemon off;\"'"
                },
                "strategy": {
                    "dockerStrategy": {
			            "noCache": true
                    },
		            "env": [
		            ]
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:${APP_IMAGE_TAG}"
                    }
                },
                "resources": {},
                "postCommit": {
					
				},
                "nodeSelector": null
            }
        }
    ]
}
