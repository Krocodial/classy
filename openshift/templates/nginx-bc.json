{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-bc"
  },
  "labels": {
	"template": "nginx-bc",
	"app": "classy"
  },
    "parameters": [
		{
		  "name": "APP_NAME",
		  "required": true,
		  "value": "classy"
		},
		{
		  "name": "APP_IMAGE_TAG",
		  "required": true,
		  "value": "NS"
		},
		{
		  "name": "SOURCE_REPOSITORY_URL",
		  "required": true,
		  "value": "https://github.com/krocodial/classy.git"
		},	
		{
		  "name": "SOURCE_REPOSITORY_REF",
		  "required": true,
		  "value": "master"
		},
		{
		  "name": "NAME",
		  "required": true,
		  "value": "proxy-nginx"
		},
		{
		  "name": "IMG_SRC",
		  "required": true
		}
		
	],
	"objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": {
                    "build": "${NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}-${APP_IMAGE_TAG}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${NAME}-${APP_IMAGE_TAG}"
                }
            },
            "spec": {
                "triggers": [
                ],
				"runPolicy": "Serial",
                "source": {
                    "dockerfile": "FROM classy:${APP_IMAGE_TAG} as builder\nFROM nginx\nARG NGINX_PROXY_URL=http://172.17.0.1:1337\nARG DOLLAR=$\nENV NGINX_PROXY_URL=${NGINX_PROXY_URL}\nENV DOLLAR=${DOLLAR}\nWORKDIR /usr/share/nginx\nRUN rm -rf /usr/share/nginx/html/*\nCOPY --from=builder /opt/app-root/src/conf/html /usr/share/nginx/html\nWORKDIR /etc/nginx/conf.d\nCOPY ./conf.d/classy.conf.tmpl /etc/nginx/conf.d/classy.tmpl\nRUN cat classy.tmpl | envsubst > classy.conf"
                },
                "strategy": {
                    "dockerStrategy": {
			            "noCache": true
                    },
		            "env": [
                        {
                            "name": "NGINX_PROXY_URL",
                            "value": "http://classy${ENV_NAME}:8080/"
                        },
			            {
                            "name": "CLASSY_IMAGE",
                            "value": "${IMG_SRC}"
			            }
		            ]
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:${APP_IMAGE_TAG}"
                    }
                },
                "resources": {},
                "postCommit": {
					
				},
                "nodeSelector": null
            }
        }
    ]
}
